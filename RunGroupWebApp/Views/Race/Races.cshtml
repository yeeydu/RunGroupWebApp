@model IEnumerable<Race>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="py-4">
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach(var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <img class="bd-placeholder-img card-img-top" src="@item.Image" width="100%" height="225" />
                <div class="card-body">
                    <p class="card-text">@item.Title</p>
                    <p class="card-text">@item.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                                <a asp-asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">View</a>

                                <a asp-asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id"  type="button" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a type="button" class="btn btn-sm btn-outline-danger" asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id">
                                    Delete
                                </a>
                        </div>
                        <small class="text-muted">@item.RaceCategory</small>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
</div>